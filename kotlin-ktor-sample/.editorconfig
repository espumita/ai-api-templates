# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin files
[*.{kt,kts}]
indent_style = space
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

# Gradle files
[*.{gradle,gradle.kts}]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
indent_style = space
indent_size = 4

# XML files
[*.xml]
indent_style = space
indent_size = 4

# JSON files
[*.{json,json5}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Web files
[*.{htm,html,js,ts,tsx,css,sass,scss,less,svg,vue}]
indent_style = space
indent_size = 2

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 4

# Batch files (Windows)
[*.{cmd,bat}]
end_of_line = crlf
indent_style = space
indent_size = 4

# IntelliJ IDEA specific settings for Kotlin
[*.kt]
# Import ordering - standard library first, then third party, then local
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

# Code style
ij_kotlin_align_in_columns_case_branch = false
ij_kotlin_align_multiline_binary_operation = false
ij_kotlin_align_multiline_extends_list = false
ij_kotlin_align_multiline_method_parentheses = false
ij_kotlin_align_multiline_parameters = true
ij_kotlin_align_multiline_parameters_in_calls = false
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

# Blank lines
ij_kotlin_blank_lines_after_class_header = 0
ij_kotlin_blank_lines_around_block_when_branches = 0
ij_kotlin_blank_lines_before_declaration_with_comment_or_annotation_on_separate_line = 1

# Braces
ij_kotlin_lbrace_on_next_line = false
ij_kotlin_else_on_new_line = false

# Spaces
ij_kotlin_space_after_comma = true
ij_kotlin_space_after_extend_colon = true
ij_kotlin_space_after_type_colon = true
ij_kotlin_space_before_comma = false
ij_kotlin_space_before_extend_colon = true
ij_kotlin_space_before_type_colon = false
ij_kotlin_space_around_assignment_operators = true
ij_kotlin_space_around_equality_operators = true
ij_kotlin_space_around_logical_operators = true
ij_kotlin_space_around_relational_operators = true
ij_kotlin_space_around_additive_operators = true
ij_kotlin_space_around_multiplicative_operators = true
ij_kotlin_space_around_range = false

# Wrapping
ij_kotlin_call_parameters_wrap = off
ij_kotlin_call_parameters_lparen_on_next_line = false
ij_kotlin_call_parameters_rparen_on_next_line = false
ij_kotlin_method_parameters_wrap = off
ij_kotlin_method_parameters_lparen_on_next_line = false
ij_kotlin_method_parameters_rparen_on_next_line = false
ij_kotlin_extends_list_wrap = off
ij_kotlin_method_call_chain_wrap = off
ij_kotlin_assignment_wrap = off

# Line breaks
ij_kotlin_continuation_indent_for_chained_calls = false
ij_kotlin_continuation_indent_for_expression_bodies = false
ij_kotlin_continuation_indent_in_argument_lists = false
ij_kotlin_continuation_indent_in_elvis = false
ij_kotlin_continuation_indent_in_if_conditions = false
ij_kotlin_continuation_indent_in_parameter_lists = false
ij_kotlin_continuation_indent_in_supertype_lists = false

# Kotlin specific formatting
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL